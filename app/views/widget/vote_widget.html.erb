<script>
  $(document).ready(function(){
  $('.widget-question').on('mouseenter','.vote', function(){
  $(this).closest('.widget-question').find('.display-text').addClass('hover');    
  });

  $('.widget-question').on('mouseleave','.vote', function(){
  $(this).closest('.widget-question').find('.display-text').removeClass('hover');    
  });
  });
</script>
<% if @voting_round %>
  <div class="widget-prompt">
    <%= voted? ? "Thanks for voting!" : "Which question should WBEZ investigate next?" %>
  </div>
  <div class="questions-container">
    <% display_order(@voting_round.questions[0..2]).each_with_index do |question, index| %>
      <div class="widget-question" style="background-image: url(<%= question_image_url(question) %>)">
        <span class="ranking-legend">
          <% if voted? %>
            <h3 class="rank" id="rank<%= question.id.to_s %>"><%= (index + 1).ordinalize %></h3>
          <% end %>
        </span>
        <div class="widget-question-text">
          <%unless voted? %>
            <%=link_to "", widget_vote_path(question_id: question.id, voting_round_id: @voting_round.id), method: :post, class: "vote", id: "vote"+question.id.to_s %> 
          <% end %>
          <div class="widget-blue-hover">
            <div class="display-text">
              <%= question_display_text(question) %>
            </div>
          </div>
          <% if voted? %><span class="rank-triangle"></span>
            <%= if last_vote?(question.id) then content_tag(:div, nil, id: 'vote_confirm' + question.id.to_s, class: "voted") end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <%= link_to image_tag("cc-logo.png", class: "widget-image-logo", alt: "WBEZ CuriousCity" ), root_url, target: "blank" %>
  <div class="widget-subtitle">
    What do you wonder about Chicago?
  </div>
